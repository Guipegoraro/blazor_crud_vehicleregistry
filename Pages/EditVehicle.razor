@page "/vehicle"
@using Models


<PageTitle>Novo Veículo</PageTitle>
<h1>Catálogo de veículos</h1>
<h3>Novo veículo</h3>
<div class="row">
    <div class="col-sm-4">
        <EditForm class="">
            <div class="mb-3">
                <label for="model" class="form-label"></label>
                <InputText id="model" @bind-Value="vehicle.Model" class="form-control"></InputText>
            </div>
            <div class="mb-3">
                <label for="year" class="form-label"></label>
                <InputNumber id="year" @bind-Value="vehicle.Year" class="form-control"></InputNumber>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label"></label>
                <InputNumber id="price" @bind-Value="vehicle.Price" class="form-control"></InputNumber>
            </div>
        </EditForm>
    </div>
</div>
@code {
    private Vehicle vehicle = new() 
    {
        Id = 0,
        Model = string.Empty,
        Year = 0000,
        Price = 0f,
        BuyingDate = new DateTime.Now
        
    };
}
